<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="15dp"
    android:background="@android:color/transparent"
    android:backgroundTint="#F5F0E5"
    app:cardCornerRadius="10dp"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/materialDateView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Date"
            android:gravity="center"
            android:layout_weight="1.5"
            android:textColor="@color/black"
            android:fontFamily="@font/arimo_medium"
            android:background="@drawable/background_green_rounded_corner"
            android:backgroundTint="#8C8C8C"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/materialNameView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Name"
                android:textSize="20dp"
                android:fontFamily="@font/arimo_medium"
                android:textColor="@color/black"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/materialCategoryView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Category"
                android:textSize="14dp"
                android:layout_weight="1"
                android:fontFamily="@font/arimo_medium"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/materialUnitView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="26 Unit"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="16dp"
                android:fontFamily="@font/arimo_medium"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/RequestedMaterialStatusView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Requested"
                android:gravity="center"
                android:textSize="14dp"
                android:layout_weight="1"
                android:fontFamily="@font/arimo_medium"
                android:textColor="@color/black"
                android:background="@drawable/background_yellow_rounded_corner"/>

        </LinearLayout>
    </LinearLayout>




</androidx.cardview.widget.CardView>
